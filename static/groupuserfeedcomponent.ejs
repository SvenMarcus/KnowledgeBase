<div>
    <p class="title">Gruppenvorschlag für <%= group.topicName %> </p>
    <p class="subtitle">Möchtest du dieser Gruppe beitreten?</p>

    <div class="columns">
        <% for (const member of group.members) {%>
            <div class="column is-2">
                <img src="img/user-solid.svg" style="min-width:30px; width:15%; margin-left:auto; margin-right:auto; display:block;">
                <p style="text-align: center;"><%= member.fullName() %></p>
            </div>
        <% } %>
    </div>

    <form method="POST">
        <div class="buttons">
            <button class="button is-success" name="JOIN" value="<%= group.id %>" type="submit">Beitreten</button>
            <button class="button is-danger" name="REJECT" value="<%= group.id %>" type="submit">Ablehnen</button>
        </div>
    </form>
</div>